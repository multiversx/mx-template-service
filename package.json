{
  "name": "starter-microservice",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:devnet": "npm run copy-devnet-config & nest start",
    "start:devnet:watch": "npm run copy-devnet-config & nest start --watch",
    "start:testnet": "npm run copy-testnet-config & nest start",
    "start:testnet:watch": "npm run copy-testnet-config & nest start",
    "start:mainnet": "npm run copy-mainnet-config & nest start",
    "start:custom": "npm run copy-custom-config & nest start",
    "start:custom:watch": "npm run copy-custom-config & nest start --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "copy-devnet-config": "cp ./config/config.devnet.yaml ./config/config.yaml",
    "copy-testnet-config": "cp ./config/config.testnet.yaml ./config/config.yaml",
    "copy-mainnet-config": "cp ./config/config.mainnet.yaml ./config/config.yaml",
    "copy-custom-config": "cp ./config/config.custom.yaml ./config/config.yaml"
  },
  "dependencies": {
    "@elrondnetwork/transaction-processor": "^0.1.19",
    "@nestjs/common": "^8.2.0",
    "@nestjs/config": "^1.1.0",
    "@nestjs/core": "^8.2.0",
    "@nestjs/microservices": "^8.2.0",
    "@nestjs/platform-express": "^8.2.0",
    "@nestjs/platform-socket.io": "^8.2.0",
    "@nestjs/schedule": "^1.0.1",
    "@nestjs/swagger": "^5.1.4",
    "@nestjs/websockets": "^8.2.0",
    "cache-manager": "^3.4.4",
    "jsonwebtoken": "^8.5.1",
    "nest-winston": "^1.6.1",
    "prom-client": "^14.0.1",
    "redis": "^3.1.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.4.0",
    "socket.io": "^4.3.2",
    "swagger-ui-express": "^4.1.6",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.1.4",
    "@nestjs/schematics": "^8.0.4",
    "@nestjs/testing": "^8.2.0",
    "@types/cache-manager": "^3.4.2",
    "@types/cron": "^1.7.3",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/js-yaml": "^4.0.4",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/node": "^16.11.7",
    "@types/redis": "^2.8.32",
    "@types/supertest": "^2.0.11",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.3.1",
    "js-yaml": "^4.1.0",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
